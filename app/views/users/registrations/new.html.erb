<h2 class="title is-1">新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), remote: false) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br/>
    <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワードの確認入力" %><br/>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
  </div>

  <%= f.submit "登録", class: "button is-primary is-flex is-justify-content-center" %>
<% end %>

<%= render "users/shared/links" %>
