<div class="columns is-centered">
  <div class="column is-full">
    <h1 class="title is-1">RailsDeviseSample</h1>
  </div>
</div>

<%= link_to("新規登録", new_user_registration_path, class: "button is-primary is-flex is-justify-content-center") %>

<div class="mt-3">
  <%= link_to('ログイン', new_user_session_path, class: 'button is-flex is-justify-content-center') %>
</div>

<div class="mt-3">
  <% if user_signed_in? %>
    <%= form_with(url: destroy_user_session_path, method: :delete, remote: false) do |f| %>
      <%= f.submit "ログアウト", class: "button" %>
    <% end %>
  <% end %>
</div>

<div class="mt-4">
  <% if user_signed_in? %>
    <%= form_with(url: user_registration_path, method: :delete, remote: false) do |f| %>
      <%= f.submit "退会", class: "button is-danger" %>
    <% end %>
  <% end %>
</div>
